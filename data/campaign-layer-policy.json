      "alwaysOn": true,
      "budgetSharePct": 0.05,
      "campaignPrefix": "SP_DEF_",
      "targetAcos": 0.10
    },
    "L1": {
      "name": "CORE",
      "nameJa": "恒常主力",
      "purpose": "安定売上・事業の軸",
      "alwaysOn": true,
      "budgetSharePct": 0.55,
      "campaignPrefix": "SP_CORE_",
      "targetAcos": 0.15
    },
    "L2": {
      "name": "EXP",
      "nameJa": "探索",
      "purpose": "育成・昇格候補の蓄積",
      "alwaysOn": true,
      "budgetSharePct": 0.25,
      "campaignPrefix": "SP_EXP_",
      "targetAcos": 0.25
    },
    "L3": {
      "name": "EVT",
      "nameJa": "セール専用",
      "purpose": "セール時の最大化",
      "alwaysOn": false,
      "budgetSharePct": 0.10,
      "campaignPrefix": "SP_EVT_",
      "targetAcos": 0.20
    },
    "L4": {
      "name": "AUTO",
      "nameJa": "オート",
